<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/byorder_sn"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="sn" />

    <TextView
        android:id="@+id/byorder_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/byorder_sn"
        android:text="Name"
        android:layout_alignBottom="@+id/byorder_sn" />

    <TextView
        android:id="@+id/byorder_quantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/byorder_name"
        android:layout_toEndOf="@+id/byorder_name" />

    <TextView
        android:id="@+id/byorder_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="Price"
        android:layout_alignBottom="@+id/byorder_quantity"
        android:layout_toEndOf="@+id/byorder_quantity" />

</RelativeLayout>
