<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.speats.Activities.EditMenuActivity">


    <TextView
        android:id="@+id/editMenuHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/editMenuNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMenuHeader"
        android:layout_marginTop="20dp"
        android:text="Enter new item name:" />

    <EditText
        android:id="@+id/editMenuNameInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMenuNameHeader"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/editMenuPriceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter new item price:"
        android:layout_below="@+id/editMenuNameInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editMenuPriceInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMenuPriceHeader"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/editMenuDescriptionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter new item description:"
        android:layout_below="@+id/editMenuPriceInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editMenuDescriptionInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMenuDescriptionHeader"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textShortMessage" />

    <TextView
        android:id="@+id/editMenuPosterPathHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter new item image url:"
        android:layout_below="@+id/editMenuDescriptionInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editMenuPosterPathInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMenuPosterPathHeader"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/editMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMenuPosterPathInput"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Confirm" />

</RelativeLayout>
